{
  "baseUrl": ".",
  "compilerOptions": {
    "allowJs": false,
    "baseUrl": ".",
    "esModuleInterop": true,
    "importHelpers": true,
    "jsx": "react-jsx",
    "lib": ["dom", "esnext"],
    "module": "esnext",
    "moduleResolution": "node",
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": true,
    "noImplicitReturns": false,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "paths": {
      "*": ["*", "types/*"],
      "@kaoto/api": ["./src/api"],
      "@kaoto/assets": ["./src/assets"],
      "@kaoto/components": ["./src/components"],
      "@kaoto/layout": ["./src/layout"],
      "@kaoto/routes": ["./src/routes"],
      "@kaoto/services": ["./src/services"],
      "@kaoto/store": ["./src/store"],
      "@kaoto/types": ["./src/types"],
      "@kaoto/utils": ["./src/utils"]
    },
    "strict": true,
    "target": "es6"
  },
  "include": ["src", "webpack.common.js", "setupTests.ts"],
  "exclude": ["cypress"]
}
